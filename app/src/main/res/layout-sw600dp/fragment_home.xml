<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo_home"
            android:layout_marginBottom="50dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/button_play"
            android:id="@+id/img_play_btn"
            android:scaleType="fitXY"
            android:padding="20dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="20dp"
            app:srcCompat="@drawable/button_store"
            android:id="@+id/img_store_btn"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/button_settings"
            android:id="@+id/img_settings_btn"/>
    </LinearLayout>

</RelativeLayout>